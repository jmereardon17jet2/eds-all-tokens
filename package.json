{
  "name": "@adobe/aem-boilerplate",
  "private": true,
  "version": "1.3.0",
  "description": "Starter project for Adobe Helix",
  "scripts": {
    "start": "concurrently \"npm run lint:watch\" \"postcss **/**/**/*.scss --config postcss.config.js --base . --dir . --ext css --watch\" \"aem up\"",
    "lint:js": "eslint .",
    "lint:css": "stylelint blocks/**/*.css styles/*.css",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:watch": "esw . -w --color --quiet",
    "update-tokens": "ncu @jet2/designsystem.tokens -u && npm install -D && node scripts/utils/generate-tokens.js && npm run add-tokens",
    "update-tokens:holidays": "ncu @jet2/designsystem.tokens -u && npm install -D && node scripts/utils/generate-tokens.js --theme holidays && npm run add-tokens",
    "add-tokens": "node scripts/utils/add-tokens.js",
    "new-block": "node scripts/utils/create-block.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adobe/aem-boilerplate.git"
  },
  "author": "Adobe",
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/adobe/aem-boilerplate/issues"
  },
  "homepage": "https://github.com/adobe/aem-boilerplate#readme",
  "devDependencies": {
    "@babel/eslint-parser": "7.25.9",
    "@csstools/postcss-sass": "^5.1.1",
    "@jet2/designsystem.tokens": "^1.2.0",
    "clean-css": "^5.3.3",
    "concurrently": "^9.1.2",
    "diff": "^7.0.0",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-watch": "^8.0.0",
    "glob": "^11.0.0",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-preset-env": "^10.1.3",
    "postcss-reporter": "^7.1.0",
    "postcss-scss": "^4.0.9",
    "stylelint": "16.12.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-value-no-unknown-custom-properties": "^6.0.1"
  }
}
